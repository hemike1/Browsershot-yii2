{
    "name": "hemike1/browsershot-yii2",
    "description": "Browsershot integration as component for Yii2 framework",
    "homepage": "https://github.com/hemike1/Browsershot-yii2",
    "keywords": [
        "convert",
        "webpage",
        "image",
        "pdf",
        "screenshot",
        "chrome",
        "headless",
        "puppeteer"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "spatie/temporary-directory": "^2.0",
        "symfony/process": "^6.0|^7.0",
        "ext-json": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "spatie/image": "^3.6",
        "spatie/pdf-to-text": "^1.52",
        "spatie/phpunit-snapshot-assertions": "^4.2.3|^5.0"
    },
    "autoload": {
        "psr-4": {
            "hemike1\\Browsershot\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Browsershot_yii2\\Browsershot\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
